<Window x:Class="TableroTareasWPF.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nombre de Columna" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Background="Transparent" AllowsTransparency="True">

    <Border Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Opacity="0.2"/>
        </Border.Effect>
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Nueva Columna" FontWeight="Bold" FontSize="18" Foreground="#172B4D" Margin="0,0,0,15"/>
                <TextBlock Text="Nombre:" Foreground="#5E6C84" Margin="0,0,0,5"/>
                <TextBox x:Name="txtInput" Height="35" VerticalContentAlignment="Center" Padding="5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancelar" Width="80" Height="30" Margin="0,0,10,0" Click="BtnCancel_Click"/>
                    <Button Content="Aceptar" Width="80" Height="30" Background="#0052CC" Foreground="White" Click="BtnOk_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>