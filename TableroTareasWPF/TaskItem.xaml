<UserControl x:Class="TableroTareasWPF.TaskItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Margin="0,0,0,12"
             MouseMove="UserControl_MouseMove">

    <UserControl.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E6E8EA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border x:Name="CardBorder" Background="White" CornerRadius="6" BorderThickness="0" MinHeight="90">
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="#000"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="PriorityStrip" Background="Orange" CornerRadius="6,0,0,6"/>

            <StackPanel Grid.Column="1" Margin="12,10,10,10">

                <TextBlock x:Name="txtTitulo" FontWeight="Bold" FontSize="14" Foreground="#172B4D" Text="Título Tarea" TextWrapping="Wrap" Margin="0,0,0,4"/>

                <TextBlock x:Name="txtDescripcion" FontSize="12" Foreground="#5E6C84" Text="Descripción..." TextWrapping="Wrap" MaxHeight="36" TextTrimming="CharacterEllipsis" Margin="0,0,0,10"/>

                <Separator Background="#F4F5F7" Margin="0,0,0,8"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="📅" FontSize="10" Margin="0,0,4,0"/>
                        <TextBlock x:Name="txtFecha" FontSize="11" Foreground="#6B778C" Text="12 Oct"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="btnEditar" Content="Editar" Style="{StaticResource ActionButtonStyle}" Foreground="#0052CC" Click="btnEditar_Click" Margin="0,0,5,0"/>
                        <Button x:Name="btnEliminar" Content="Borrar" Style="{StaticResource ActionButtonStyle}" Foreground="#BF2600" Click="btnEliminar_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>